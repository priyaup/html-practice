<!DOCTYPE html>
<html>
	<head>
		<title>@formtask</title>
		<style>
			.container{
			width: 90%;
			margin: 0% auto;
			}
			.back{
				margin-top: 30px;
				background-color: #fff;
				width: 100%;
				height: 600px;
				box-shadow: 2px 2px 5px;
			}
			.container2>p{
				font-size: 60px;
				letter-spacing: 3px;	
			}
			.pic{
				width: 30%;
				margin-top: 20px;
				margin-left: 20px;
			}
			 img{
				width: 200px;
				height: 200px;
				border-radius: 100px;
			}
			*{
				margin: 0%;
				padding: 0%;
			}
			.container2{
				width: 40%;
				display: block;
				margin: auto;
				padding-left: 300px;
			}
			input[type=text]
			{ padding: 10px;
				width: 50%;
				margin-top: 30px;
				border: none;
				border-bottom: 2px solid green;

			}
			input[type=password]
			{
			  padding: 10px;
			  width: 50%;
			  margin-top: 20px;
			  border: none;
			  border-bottom: 2px solid green;
			}
			input[type=submit]{
				padding: 10px;
				margin-top: 30px;
				background-color: green;
				width: 55%;
				border: none;
				border-radius: 10px;
			}
			.list{
				margin-top: 70px;
			}
			.list span{
				color: green;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<div class="back">
				<div class="container2">
					<p>Welcome</p>
					<div class="pic">
						<img src=" images/img3.jpg">
					</div>
					<div>
						<form>
							<input type="text" placeholder="Username"><br>
							<input type="password" placeholder="password"><br>
							<input type="submit" value="login">
						</form>
						<div class="list">
							<ul>
								<li>Forgot<span> username/password</span></li>
								<li>Don't have an account?<span>SingUp</span></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
